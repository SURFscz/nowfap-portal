# Create the admin identity
dn: {{ basedn }}
o: {{ organisation }}
dc: {{ basedn | regex_replace('^dc=([^,]+).*', '\\1') }}
objectClass: dcObject
objectClass: organization

dn: cn={{ ldap_admin }},{{ basedn }}
cn: admin
objectClass: organizationalRole

# Create the organisational unit (ou) group, which will contain all groups
dn: ou=group,{{ basedn }}
ou: Groups
objectClass: top
objectClass: organizationalUnit

# Add a group to the group container
dn: cn=irodsuser,ou=Group,{{ basedn }}
cn: irodsuser
gidNumber: 2500
objectClass: top
objectClass: posixGroup
